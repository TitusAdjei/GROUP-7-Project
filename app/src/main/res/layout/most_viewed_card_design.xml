<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bos_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/bosphorus_2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/bos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bosphorus"
            android:layout_toRightOf="@+id/bos_image"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:fontFamily="@font/andika_new_basic_bold"
            android:textColor="@color/black"/>

        <RatingBar
            android:id="@+id/bos_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bos_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bos_image"
            android:padding="5dp"
            android:rating="4.2" />

        <TextView
            android:id="@+id/bos_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bos_rating"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/bos_image"
            android:padding="10dp"
            android:text="Bosphorus is a restaurant serving traditional Turkish food, with a few nods to other international cuisines." />
    </RelativeLayout>
</androidx.cardview.widget.CardView>